@{
    Layout = null;
}

<script type="text/javascript" src="~/Scripts/js/TablaMantenimiento.js"></script>

<div class="container-fluid my-4" id="cuerpo">
    <div class="row m-0">
        <div class="col-12 cuerpo-interior">
            <div class="container py-4">
                <div class="row">
                    <div class="col-md-12 col-lg-6 pt-4">
                        <div class="h4">Mantenimiento de Tablas&nbsp;<i class="fas fa-question-circle ayuda-tooltip" data-toggle="tooltip" data-placement="right" title="Texto de ayuda que describe el funcionamiento general del módulo [...]"></i><br><small class="text-muted">Seleccione el tipo de mantenimiento que desea realizar de acuerdo a las tablas maestras que utiliza el sistema.</small></div>
                    </div>
                    <div class="col-md-12 col-lg-6 pt-4">&nbsp;</div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-lg-6 pt-4">
                        <form>
                            <div class="form-group">
                                <label for="txt-buscar">Buscar&nbsp;<i class="fas fa-question-circle ayuda-tooltip" data-toggle="tooltip" data-placement="right" title="Ingrese si conoce el nombre de la iniciativa o la(s) palabra(s) asociada(s) a las iniciativas de interés. En caso de no encontrar resultados acceda a la búsqueda avanzada."></i></label>
                                <div class="input-group">
                                    <div class="input-group-prepend"><span class="input-group-text" id="inputGroup1"><i class="fas fa-table"></i></span></div>
                                    <select class="form-control" id="cbo-tabla-mantenimiento" required>
                                        <option value="0">-Seleccione una Tabla de Matenimiento-</option>
                                        <option value="1">Mantenimiento de Usuarios</option>
                                        <option value="2">Mantenimiento de Instituciones</option>
                                        <option value="3">Mantenimiento de Ubicaciones</option>
                                        <option value="4">Mantenimiento de Medidas de Mitigación</option>
                                        <option value="5">Mantenimiento de Sectores</option>
                                        <option value="6">Mantenimiento de Ubicaciones</option>
                                        <option value="7">Mantenimiento de Parámetros de Medida de Mitigación</option>
                                        <option value="8">Mantenimiento de Indicadores de Medida de Mitigación</option>
                                        <option value="9">Mantenimiento de Ayuda en Linea y Ayuda Contextual</option>
                                        <option value="10">Mantenimiento de Escenarios</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 col-md-6 col-lg-6">&nbsp;</div>
                                <div class="col-sm-12 col-md-6 col-lg-6"><a class="btn btn-success w-100 mb-2" href="#" id="ir-mantenimiento" onclick="fn_irMantenimiento();"><i class="far fa-hand-point-up px-1"></i>Ir al mantenimiento</a></div>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-12 col-lg-6 pt-4">&nbsp;</div>
                </div>
            </div>
        </div>
    </div>
</div>