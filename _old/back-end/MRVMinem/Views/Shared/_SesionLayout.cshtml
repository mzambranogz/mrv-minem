    <script type="text/javascript">
        var baseUrl = '@Url.Content("~")';
        var ws;

        $(document).ready(function () {
            $('html, body').animate({ scrollTop: scroll }, 1000);
            CargarOpciones();
            $("#Control").data("usuario", $("#identificador").val());
        });

        function CargarOpciones() {
            //debugger;
            var Item = {
                ID_USUARIO: $("#identificador").val()
            };

            $.ajax({
                url: baseUrl + 'Administrado/Gestion/ListarOpciones',
                type: 'POST',
                datatype: 'json',
                data: Item,
                success: function (data) {
                    if (data != null && data != "") {
                        if (data.length > 0) {
                            for (var i = 0; i < data.length; i++) {
                                    if (data[i]["ID_OPCION"] == 1) {
                                        $("#Control").data("opcion1",1)
                                    }else if (data[i]["ID_OPCION"] == 2) {
                                        $("#Control").data("opcion2", 1)
                                    } else if (data[i]["ID_OPCION"] == 3) {
                                        $("#Control").data("opcion3", 1)
                                    } else if (data[i]["ID_OPCION"] == 4) {
                                        $("#Control").data("opcion4", 1)
                                    } else if (data[i]["ID_OPCION"] == 5) {
                                        $("#Control").data("opcion5", 1)
                                    } else if (data[i]["ID_OPCION"] == 6) {
                                        $("#Control").data("opcion6", 1)
                                    } else if (data[i]["ID_OPCION"] == 7) {
                                        $("#Control").data("opcion7", 1)
                                    } else if (data[i]["ID_OPCION"] == 8) {
                                        $("#Control").data("opcion8", 1)
                                    } else if (data[i]["ID_OPCION"] == 9) {
                                        $("#Control").data("opcion9", 1)
                                    }
                                    var nombres = data[i]["NOMBRES"];
                                    var correo = data[i]["CORREO"];
                                    var rol = data[i]["ID_ROL"];
                                    var institucion = data[i]["INSTITUCION"];
                                    var direccion = data[i]["DIRECCION"];
                                    var sector = data[i]["SECTOR"];
                            }
                            $("#Control").data("nombres", nombres);
                            $("#Control").data("correo", correo);
                            $("#Control").data("rol", rol);
                            $("#Control").data("institucion", institucion);
                            $("#Control").data("direccion", direccion);
                            $("#Control").data("sector", sector);

                            fn_establecerVista();
                        }
                    }
                }
            });
        }

        function fn_probar() {
            alert($("#Control").data("opcion1") + ' ' + $("#Control").data("opcion2") + ' ' + $("#Control").data("opcion3") + ' ' + $("#Control").data("opcion4") + ' ' + $("#Control").data("opcion5") + ' ' + $("#Control").data("opcion6") + ' ' + $("#Control").data("opcion7") + ' ' + $("#Control").data("opcion8") + ' ' + $("#Control").data("opcion9") + ' ' + $("#Control").data("correo") + ' ' + $("#Control").data("institucion") + ' ' + $("#Control").data("sector") + ' ' + $("#Control").data("direccion") + ' ' + $("#Control").data("iniciativa"));
        }



        function fn_accionesMitigacion() {

            var urlListar = baseUrl + 'Administrado/Gestion/AccionMitigacion';
            $.ajax({
                url: urlListar,
                dataType: 'html',
                type: 'get',
                contentType: 'text/xml; charset=utf-8',
                success: function (response) {
                    var detalle = response;
                    $('#divProceso').html('');
                    $('#divProceso').append(detalle);
                }
            });
        }

        function fn_establecerVista() {

            var opcion = '<span class="dropdown-item">' + $("#Control").data("nombres") + ' <br>';
            if ($("#Control").data("rol") == 1) {
                opcion = opcion + '<span class="badge badge-actor-02">Usuario Administrado</span></span>'
            }else if ($("#Control").data("rol") == 2){
                opcion = opcion + '<span class="badge badge-actor-03">Especialista</span></span>'
            }else if ($("#Control").data("rol") == 3){
                opcion = opcion + '<span class="badge badge-actor-06">Administrador MINEM</span></span>'
            }else if ($("#Control").data("rol") == 4){
                opcion = opcion + '<span class="badge badge-actor-04">Evaluador MINAM</span></span>'
            }else if ($("#Control").data("rol") == 5){
                opcion = opcion + '<span class="badge badge-actor-05">Verificador Externo</span></span>'
            }

            if ($("#Control").data("opcion6") == 1) { //Añade a las opciones el mantenimiento de tablas
                opcion = opcion + '<a class="dropdown-item" href="#" onclick="fn_mantenimiento();"><i class="fas fa-cogs pr-1"></i>Mantenimiento de tablas</a>';
            }

            if ($("#Control").data("opcion7") == 1) {
                opcion = opcion + '<a class="dropdown-item" href="./cambiar.html"><i class="fas fa-key pr-1"></i>Cambiar contraseña</a>';
            }

            opcion = opcion + '<div class="dropdown-divider"></div><a class="dropdown-item" href="#" onclick="salirSesion();"><i class="fas fa-sign-out-alt pr-1"></i>Salir del sistema</a>';

            $("#usuario-rol").append(opcion);


            if ($("#Control").data("opcion2") == 1) {

            }

            if ($("#Control").data("opcion3") == 1) {

            }

            if ($("#Control").data("opcion4") == 1) {

            }



            if ($("#Control").data("opcion6") == 1) {

            }

            fn_accionesMitigacion();

        }

        function fn_mantenimiento() {
