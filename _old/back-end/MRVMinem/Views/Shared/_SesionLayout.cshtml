        }

        function fn_notificaciones() {
            MRV.ObtenerVista(baseUrl + 'Administrado/Gestion/Notificacion');
        }

        function salirSesion() {
            $("#Control").data("usuario", 0);
            $("#Control").data("rol", 0);
            $("#Control").data("nombres", 0);
            $("#Control").data("correo", 0);
            $("#Control").data("institucion", 0);
            $("#Control").data("direccion", 0);
            $("#Control").data("sector", 0);
            $("#Control").data("opcion1", 0);
            $("#Control").data("opcion2", 0);
            $("#Control").data("opcion3", 0);
            $("#Control").data("opcion4", 0);
            $("#Control").data("opcion5", 0);
            $("#Control").data("opcion6", 0);
            $("#Control").data("opcion7", 0);
            $("#Control").data("opcion8", 0);
            $("#Control").data("opcion9", 0);
            location.href = baseUrl + "Home/Index";
        }


